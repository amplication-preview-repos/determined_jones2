datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  posts     Post[]
  updatedAt DateTime @updatedAt
}

model AdminAction {
  action    EnumAdminActionAction?
  createdAt DateTime               @default(now())
  id        String                 @id @default(cuid())
  ipAddress String?
  updatedAt DateTime               @updatedAt
  user      User?                  @relation(fields: [userId], references: [id])
  userId    String?
}

model Post {
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  content    String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  title      String?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  adminActions AdminAction[]
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  posts        Post[]
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}

enum EnumAdminActionAction {
  Option1
}
